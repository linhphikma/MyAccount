<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xifan.myaccount"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.xifan.myaccount.MainActivity"
            android:label="@string/app_name"
            android:logo="@drawable/ic_logo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.xifan.myaccount.AddRecord"
            android:label="@string/add_record_title" >
        </activity>
        <activity
            android:name="com.xifan.myaccount.ShowRecord"
            android:label="@string/show_record_title" >
        </activity>
        <activity
            android:name="com.xifan.myaccount.SettingsActivity"
            android:label="@string/label_settings" >
        </activity>
        <activity
            android:name="com.xifan.myaccount.SearchTypeActivity"
            android:label="@null"
            android:theme="@style/SearchWindow" >
        </activity>
    </application>

</manifest>